@inherits LayoutComponentBase

<div class="min-vh-100 d-flex flex-column">
  <header>
    <NavMenu />
  </header>

  <main class="flex-fill">
    <div class="container py-4">
      @Body
    </div>
  </main>

  <footer class="mt-auto py-3 border-top" style="border-color: rgba(255,255,255,0.04);">
    <div class="container d-flex justify-content-between align-items-center">
      <div class="small text-muted">© @(DateTime.Now.Year) BIL — Blazor Interface Library</div>
      <div>
        <a class="btn btn-outline-secondary btn-sm me-2" href="https://github.com/yourname/blazor-interface-library" target="_blank">GitHub</a>
        <a class="btn btn-primary btn-sm" href="#demo">Try demo</a>
      </div>
    </div>
  </footer>
</div>
