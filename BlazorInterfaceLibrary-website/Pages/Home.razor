@page "/"

<!-- HERO -->
<section class="hero mb-4">
    <div class="container text-center">
        <h1 class="display-5 fw-bold">Blazor Interface Library (BIL)</h1>
        <p class="lead text-muted mt-2">Lightweight, OOP-first Blazor components that are easy to configure and reuse.</p>

        <div class="d-flex justify-content-center gap-2 mt-3">
            <a class="btn btn-light btn-lg text-dark" href="https://github.com/yourname/blazor-interface-library" target="_blank">View on GitHub</a>
            <a class="btn btn-outline-light btn-lg" href="#demo">Live Demo</a>
        </div>

        <div class="mt-3">
            <span class="badge bg-warning text-dark">v1.2</span>
            <small class="text-muted ms-2">Stable • Interactive fixes • Polymorphic JSON</small>
        </div>
    </div>
</section>

<!-- FEATURES -->
<section id="features" class="mb-4">
    <div class="row gy-3">
        <div class="col-md-4">
            <div class="card card-dark h-100 p-3">
                <h5 class="mb-1">List (paginated)</h5>
                <p class="small text-muted mb-0">Interactive lists with status controls and JSON-driven data source.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-dark h-100 p-3">
                <h5 class="mb-1">Badge & UI tokens</h5>
                <p class="small text-muted mb-0">Strict enums ensure predictable styling and behavior.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-dark h-100 p-3">
                <h5 class="mb-1">Charts & Progress</h5>
                <p class="small text-muted mb-0">Lightweight components for dashboards and stats.</p>
            </div>
        </div>
    </div>
</section>

<!-- WHAT'S NEW -->
<section id="whatsnew" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-dark p-3">
                <h6 class="mb-2">Interactive Wrapper</h6>
                <p class="small text-muted mb-0">Reliable re-rendering for interactive components (`StateHasChanged` wired via wrapper).</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-dark p-3">
                <h6 class="mb-2">Polymorphic JSON</h6>
                <p class="small text-muted mb-0">Load different component types from one JSON file using discriminators.</p>
            </div>
        </div>
    </div>
</section>

<!-- DEMO -->
<section id="demo" class="mb-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-dark p-3">
                <h5>Interactive List demo</h5>
                <p class="small text-muted">Replace this placeholder with <code>&lt;ListComponentView /&gt;</code> after referencing the RCL.</p>

                <div class="border rounded p-3 mt-2" style="background: rgba(255,255,255,0.02); min-height:180px;">
                    <div class="text-center text-muted py-4">[Live demo placeholder]</div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-dark p-3">
                <h6>Quick install</h6>
                <pre class="cmd mb-2">dotnet add package BlazorInterfaceLibrary --version 1.2.0</pre>
                <a class="btn btn-outline-light" href="https://github.com/yourname/blazor-interface-library" target="_blank">Get on GitHub</a>
            </div>
        </div>
    </div>
</section>

<!-- CHANGELOG -->
<section class="mb-5">
    <div class="card card-dark p-3">
        <h6>Changelog</h6>
        <ul class="list-unstyled small mt-2 mb-0 text-muted">
            <li>v1.2 — Interactive wrapper, pagination fix, JSON improvements.</li>
            <li>v1.1 — Charts, bug fixes.</li>
            <li>v1.0 — First stable release.</li>
        </ul>
    </div>
</section>
